{
  "name": "aetheria-site-generator",
  "version": "1.0.0",
  "description": "Static site generator for Aetheria world data",
  "type": "module",
  "main": "dist/generator.js",
  "scripts": {
    "build": "AETHERIA_BASE_PATH='/Aetheria/' tsc && AETHERIA_BASE_PATH='/Aetheria/' node dist/generator.js",
    "build:local": "AETHERIA_BASE_PATH='/' tsc && AETHERIA_BASE_PATH='/' node dist/generator.js",
    "dev": "tsx src/generator.ts",
    "dev:local": "AETHERIA_BASE_PATH='/' tsx src/generator.ts",
    "clean": "rm -rf dist",
    "preview": "cd dist && python3 -m http.server 8000"
  },
  "dependencies": {
    "yaml": "^2.3.4",
    "markdown-it": "^14.0.0",
    "gray-matter": "^4.0.3",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/markdown-it": "^14.0.1",
    "@types/mustache": "^4.2.5",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "keywords": ["aetheria", "worldbuilding", "static-site", "github-pages"],
  "author": "",
  "license": "MIT"
}
