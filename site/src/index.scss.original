  color: $white;
  padding: 2rem 0;
  text-align: center;
  box-shadow: $shadow-medium;

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  p {
    font-size: 1.2rem;
    opacity: 0.9;
  }
}

/* Navigation */
nav {
  background: $white;
  padding: 1rem 0;
  border-bottom: 1px solid $border-color;
  box-shadow: $shadow-light;

  ul {
    list-style: none;
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;

    @media (min-width: 768px) {
      justify-content: flex-start;
    }
  }

  li {
    margin: 0;
  }

  a {
    color: $text-color;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    transition: all 0.3s ease;
    font-weight: 500;

    &:hover {
      background: $primary-gradient;
      color: $white;
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    &.active {
      background: $primary-color;
      color: $white;
    }
  }
}

/* Main content */
main {
  background: $white;
  margin: 2rem auto;
  padding: 2rem;
  border-radius: 8px;
  box-shadow: $shadow-light;
  min-height: 60vh;
}

/* Tables */
table {
  width: 100%;
  border-collapse: collapse;
  margin: 2rem 0;
  background: $white;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: $shadow-light;
  table-layout: fixed; /* Use fixed layout for better column control */

  th {
    background: $primary-gradient;
    color: $white;
    padding: 1rem 0.75rem;
    text-align: left;
    font-weight: 600;
    white-space: nowrap; /* Prevent header wrapping */
    overflow: hidden;
    text-overflow: ellipsis;
  }

  td {
    padding: 1rem 0.75rem;
    border-bottom: 1px solid $border-color;
    vertical-align: top;
    word-wrap: break-word;
    overflow-wrap: break-word;

    &:first-child {
      font-weight: 500;
      width: 15%; /* Set specific width for name column */
    }

    &:nth-child(2) {
      width: 12%; /* Type column */
    }

    &:nth-child(3) {
      width: 12%; /* Damage/Protection/Rarity column */
    }

    &:nth-child(4) {
      width: 45%; /* Description column - largest */
    }

    &:nth-child(5) {
      width: 16%; /* Alternate names column */
    }
  }

  tr {
    &:hover {
      background-color: #f8f9ff;
    }

    &:last-child td {
      border-bottom: none;
    }
  }
}

/* Responsive table wrapper */
.table-container {
  overflow-x: auto;
  margin: 2rem 0;
  border-radius: 8px;
  box-shadow: $shadow-light;
  width: 100%;
  min-width: 0; /* Allow shrinking */

  /* Add scrollbar styling for better UX */
  &::-webkit-scrollbar {
    height: 8px;
  }

  &::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 4px;
  }

  &::-webkit-scrollbar-thumb {
    background: $primary-color;
    border-radius: 4px;
  }

  /* Add mobile scroll hint */
  &::after {
    content: "← Scroll to see more →";
    display: block;
    text-align: center;
    font-size: 0.8rem;
    color: #666;
    padding: 0.5rem;
    background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.1), transparent);
    margin-top: -1px;
  }

  @media (max-width: 600px) {
    &.table-auto-cards::after {
      display: none;
    }
  }

  /* Ensure tables don't get too compressed */
  table {
    min-width: 800px; /* Increased minimum table width for better spacing */

    @media (max-width: 900px) {
      min-width: 700px; /* Reduce minimum width on smaller screens */
    }

    @media (max-width: 768px) {
      min-width: 600px; /* Further reduce for tablets */
    }

    @media (max-width: 600px) {
      min-width: 0; /* Allow full responsiveness on mobile */
    }
  }
}

/* Mobile-first responsive table */
@media (max-width: 768px) {
  .table-responsive {
    table {
      font-size: 0.85rem; /* Reduce font size to fit more content */
      table-layout: auto; /* Switch back to auto layout for flexibility */

      th, td {
        padding: 0.6rem 0.4rem; /* Reduce padding for more space */
        white-space: nowrap;
      }

      /* Reset column widths for auto layout */
      td {
        &:first-child, &:nth-child(2), &:nth-child(3), &:nth-child(4), &:nth-child(5) {
          width: auto;
        }
      }

      /* Hide less important columns on small screens */
      .hide-mobile {
        display: none;
      }

      /* Hide low priority columns to make more space */
      .low-priority {
        display: none;
      }
    }
  }

  /* Auto-convert to cards on very small screens */
  @media (max-width: 600px) {
    .table-auto-cards {
      .table-container {
        overflow-x: visible;
        box-shadow: none;
      }

      table, thead, tbody, th, td, tr {
        display: block;
      }

      table {
        margin: 1rem 0;
        box-shadow: none;
      }

      thead tr {
        position: absolute;
        top: -9999px;
        left: -9999px;
      }

      tbody {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      tr {
        background: $white;
        border-radius: 8px;
        box-shadow: $shadow-light;
        padding: 1rem;
        margin-bottom: 0;
        border: 1px solid $border-color;
      }

      td {
        border: none;
        border-bottom: 1px solid #eee;
        position: relative;
        padding: 0.75rem 0 0.75rem 50%; /* Start with more aggressive spacing */
        word-wrap: break-word;
        white-space: normal;
        min-height: 2.5rem; /* Increase minimum height for labels */

        &:before {
          content: attr(data-label);
          position: absolute;
          left: 0;
          width: 45%; /* Larger label area */
          padding-right: 10px; /* Reduce padding for more space */
          white-space: nowrap;
          overflow: hidden;
          text-overflow: ellipsis; /* Truncate long labels */
          font-weight: 600;
          color: $primary-color;
          font-size: 0.8rem; /* Smaller font for labels */
          top: 0.75rem; /* Align with data text */
          line-height: 1.2;
        }

        &:last-child {
          border-bottom: none;
        }
      }
    }
  }
}

@media (max-width: 480px) {
  .table-auto-cards td {
    padding: 0.75rem 0 0.75rem 55%; /* Even more space on small screens */

    &:before {
      width: 50%; /* Larger label area for small screens */
      padding-right: 8px;
      font-size: 0.75rem; /* Smaller font */
    }
  }
}

/* Extra small screens - very narrow phones */
@media (max-width: 380px) {
  .table-auto-cards td {
    padding: 0.75rem 0 0.75rem 60%; /* Maximum space for very small screens */

    &:before {
      width: 55%; /* Maximum label area */
      padding-right: 5px;
      font-size: 0.7rem; /* Very small font for narrow screens */
      line-height: 1.1;
    }
  }
}

/* Footer */
footer {
  background: $primary-gradient;
  color: $white;
  text-align: center;
  padding: 2rem 0;
  margin-top: 3rem;

  p {
    margin: 0;
    opacity: 0.9;
  }

  a {
    color: $white;
    text-decoration: none;
    font-weight: 500;

    &:hover {
      text-decoration: underline;
    }
  }
}

/* Page-specific styles */

// Home Page
.home-page {
  .intro-text {
    font-size: 1.2rem;
    color: $secondary-color;
    margin-bottom: 2rem;
  }

  .explore-section {
    h2 {
      margin-bottom: 1.5rem;
    }
  }

  .world-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    margin-left: 0;
    list-style: none;

    li {
      background: linear-gradient(135deg, #f8f9ff 0%, #e9ecef 100%);
      border-radius: 8px;
      margin-bottom: 0;
      transition: transform 0.3s ease, box-shadow 0.3s ease;

      &:hover {
        transform: translateY(-3px);
        box-shadow: $shadow-medium;
      }

      a {
        display: block;
        padding: 1.5rem;
        text-decoration: none;
        color: $text-color;
        font-weight: 600;
        border-radius: 8px;

        &:hover {
          background: $primary-gradient;
          color: $white;
          text-decoration: none;
        }
      }
    }
  }
}

// Magic Schools Page
.magic-schools-page {
  .magic-terms {
    background: linear-gradient(135deg, #f8f9ff 0%, #f0f4f8 100%);
    border-radius: 8px;
    padding: 1.5rem;
    margin: 1.5rem 0;
    box-shadow: $shadow-light;
    border: 1px solid #e2e8f0;

    .schools-table-container {
      overflow-x: auto;
      margin: 2rem 0;
      border-radius: 8px;
      box-shadow: $shadow-light;
    }

    .schools-table {
      margin: 0;

      .school-name-cell {
        font-weight: 600;
      }

      .school-link {
        color: $primary-color;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s ease;

        &:hover {
          color: $secondary-color;
          text-decoration: underline;
        }
      }
    }
  }
}

// Magic School Detail Page
.magic-school-page {
  .school-header {
    margin-bottom: 2rem;

    h1 {
      margin-bottom: 0.5rem;
    }

    .school-meta {
      font-size: 0.9rem;
      color: #666;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      flex-wrap: wrap;

      .meta-item {
        strong {
          color: $primary-color;
          font-weight: 600;
        }

        a {
          color: $primary-color;
          text-decoration: none;

          &:hover {
