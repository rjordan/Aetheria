{
  "name": "aetheria-site",
  "version": "1.0.0",
  "description": "SolidJS-based static site for Aetheria world",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev:local": "AETHERIA_BASE_PATH=/ vite",
    "build:local": "AETHERIA_BASE_PATH=/ vite build",
    "build:github": "AETHERIA_BASE_PATH=/Aetheria/ vite build",
    "build:mcp": "tsc src/mcp-server.ts --outDir dist --module esnext --target es2022 --moduleResolution bundler --allowImportingTsExtensions false",
    "mcp": "node dist/mcp-server.js",
    "lint": "eslint src --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "@solidjs/router": "^0.14.0",
    "js-yaml": "^4.1.0",
    "solid-js": "^1.8.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.8.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^8.57.1",
    "eslint-plugin-solid": "^0.14.5",
    "sass": "^1.69.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-solid": "^2.10.0"
  }
}
